<Page
    x:Class="DarkSoulsCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DarkSoulsCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background="#151515">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Stretch="none" Source="images/dkstxt.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="360" Margin="0,10,0,0" Height="95" Grid.ColumnSpan="2"/>
        <Grid Margin="10,105,10,20" Background="#bababa" BorderBrush= "Gray" BorderThickness="3" Grid.ColumnSpan="2" RenderTransformOrigin="0.508,0.545" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height ="491*" />
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

        </Grid>

        <!--#region Dropdowns-->

        <ComboBox x:ConnectionId='1'  x:Name="head" HorizontalAlignment="Stretch" Margin="20,120,44,0" PlaceholderText="Head"/>
        <ComboBox x:ConnectionId='2' x:Name="chest" HorizontalAlignment="Stretch" Margin="20,170,44,0" PlaceholderText="Chest"/>
        <ComboBox x:ConnectionId='3' x:Name="arms" HorizontalAlignment="Stretch" Margin="20,220,44,0" PlaceholderText="Hands"/>
        <ComboBox x:ConnectionId='4' x:Name="arms_Copy" HorizontalAlignment="Stretch" Margin="190,120,20,0" PlaceholderText="Legs" Grid.ColumnSpan="2"/>
        <ComboBox x:ConnectionId='5' x:Name="leftHand" HorizontalAlignment="Stretch" Margin="190,170,20,0" PlaceholderText="Left Hand" Grid.ColumnSpan="2"/>
        <ComboBox x:ConnectionId='6' x:Name="rightHand" HorizontalAlignment="Stretch" Margin="190,220,20,0" PlaceholderText="Right Hand" Grid.ColumnSpan="2"/>
        <!--#endregion-->

        <!--#region Defence-->
        <Rectangle HorizontalAlignment="Stretch" Fill="#e0e0e0" Margin="20,326,39,36"/>
        <Rectangle HorizontalAlignment="Stretch" Fill="#d1d1d1" Margin="20,326,39,242"/>
        <Image Stretch="none" Source="Images/physical-defence.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="25,360,0,0" Height="31"/>
        <Image Stretch="none" Source="Images/magic-defence.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="25,400,0,0" Height="31"/>
        <Image Stretch="none" Source="Images/lightning-defence.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="25,440,0,0" Height="31"/>
        <Image Stretch="none" Source="Images/fire-defence.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="25,480,0,0" Height="31"/>
        <Image Stretch="none" Source="Images/poise.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="25,520,0,0" Height="31"/>

        <TextBlock x:ConnectionId='7' x:Name="textBlock" Margin="63,326,0,0"  Text="Defence" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlock_Copy1" Margin="63,360,0,0"  Text="Physical" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='9' x:Name="textBlock_Copy2" Margin="63,400,0,0"  Text="Magic" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='10' x:Name="textBlock_Copy3" Margin="63,440,0,0"  Text="Lightning" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='11' x:Name="textBlock_Copy4" Margin="63,480,0,0"  Text="Fire" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='12' x:Name="textBlock_Copy5" Margin="63,520,0,0"  Text="Poise" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>

        <TextBlock x:ConnectionId='13' x:Name="physDef" HorizontalAlignment="Left" Margin="151,364,0,0" TextWrapping="Wrap" Text="{Binding totalPhysicalDefence}" VerticalAlignment="Top" Width="19" Height="20"/>
        <TextBlock x:ConnectionId='14' x:Name="magicDef" HorizontalAlignment="Left" Margin="151,408,0,0" TextWrapping="Wrap" Text="{Binding totalMagicDefence}" VerticalAlignment="Top" Width="19" Height="20"/>
        <TextBlock x:ConnectionId='15' x:Name="lightDef" HorizontalAlignment="Left" Margin="151,444,0,0" TextWrapping="Wrap" Text="{Binding totalLightningDefence}" VerticalAlignment="Top" Width="19" Height="20"/>
        <TextBlock x:ConnectionId='16' x:Name="fireDef" HorizontalAlignment="Left" Margin="151,480,0,0" TextWrapping="Wrap" Text="{Binding totalFireDefence}" VerticalAlignment="Top" Width="19" Height="20"/>
        <TextBlock x:ConnectionId='17' x:Name="poise" HorizontalAlignment="Left" Margin="151,520,0,0" TextWrapping="Wrap" Text="{Binding totalPoise}" VerticalAlignment="Top" Width="19" Height="20"/>
        <!--#endregion-->

        <!--#region Offence-->
        <Rectangle HorizontalAlignment="Stretch" Fill="#e0e0e0" Margin="185,326,20,36" Grid.ColumnSpan="2"/>
        <Rectangle HorizontalAlignment="Stretch" Fill="#d1d1d1" Margin="185,326,20,242" Grid.ColumnSpan="2"/>
        <Image Stretch="none" Source="Images/physical-dmg.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="190,360,0,0" Height="31" Grid.ColumnSpan="2"/>
        <Image Stretch="none" Source="Images/magic-dmg.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="190,400,0,0" Height="31" Grid.ColumnSpan="2"/>
        <Image Stretch="none" Source="Images/lightning-dmg.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="190,440,0,0" Height="31" Grid.ColumnSpan="2"/>
        <Image Stretch="none" Source="Images/fire-dmg.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="190,480,0,0" Height="31" Grid.ColumnSpan="2"/>
        <Image Stretch="none" Source="Images/bleeding.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Margin="190,520,0,0" Height="31" Grid.ColumnSpan="2"/>

        <TextBlock x:ConnectionId='18' x:Name="textBlock_Copy6" Margin="26,326,0,0"  Text="Offence" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock x:ConnectionId='19' x:Name="textBlock_Copy7" Margin="14,360,0,0"  Text="Physical" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock x:ConnectionId='20' x:Name="textBlock_Copy11" Margin="14,404,0,0"  Text="Magic" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock x:ConnectionId='21' x:Name="textBlock_Copy10" Margin="14,440,0,0"  Text="Lightning" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock x:ConnectionId='22' x:Name="textBlock_Copy9" Margin="14,480,0,0"  Text="Fire" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock x:ConnectionId='23' x:Name="textBlock_Copy8" Margin="14,524,0,0"  Text="Bleeding" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1" RenderTransformOrigin="0.863,8.95"/>

        <TextBlock x:ConnectionId='24' x:Name="physAtk" HorizontalAlignment="Left" Margin="107,360,0,0" TextWrapping="Wrap" Text="{Binding Defence[0]}" VerticalAlignment="Top" Width="19" Height="20" Grid.Column="1"/>
        <TextBlock x:ConnectionId='25' x:Name="magicAtk" HorizontalAlignment="Left" Margin="107,400,0,0" TextWrapping="Wrap" Text="{Binding Defence[1]}" VerticalAlignment="Top" Width="19" Height="20" Grid.Column="1"/>
        <TextBlock x:ConnectionId='26' x:Name="lightAtk" HorizontalAlignment="Left" Margin="107,440,0,0" TextWrapping="Wrap" Text="{Binding Defence[2]}" VerticalAlignment="Top" Width="19" Height="20" Grid.Column="1"/>
        <TextBlock x:ConnectionId='27' x:Name="fireAtk" HorizontalAlignment="Left" Margin="107,484,0,0" TextWrapping="Wrap" Text="{Binding Defence[3]}" VerticalAlignment="Top" Width="19" Height="20" Grid.Column="1"/>
        <TextBlock x:ConnectionId='28' x:Name="bleedAtk" HorizontalAlignment="Left" Margin="107,524,0,0" TextWrapping="Wrap" Text="{Binding Defence[4]}" VerticalAlignment="Top" Width="19" Height="20" Grid.Column="1"/>
        <!--#endregion-->

    </Grid>
</Page>

